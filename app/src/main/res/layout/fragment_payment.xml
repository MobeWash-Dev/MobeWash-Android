<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wallet="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:stripe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobewash.mobewash.booking.PaymentFragment">

<!--

    Android Pay Fragment

    <fragment
        android:id="@+id/wallet_fragment"
        android:name="com.google.android.gms.wallet.fragment.SupportWalletFragment"
        android:layout_width="335dp"
        android:layout_height="39dp"
        wallet:environment="test"
        wallet:fragmentMode="buyButton"
        tools:layout_editor_absoluteY="397dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout="@layout/fragment_payment" />
    />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout_details">

            <!-- Left Side -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETAILS"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/textview_details"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRST NAME"
                android:id="@+id/textview_firstname_detail"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_details"
                android:textColor="#398bff"/>

            <TextView
                android:id="@+id/textview_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_firstname_detail"
                android:text="SHUANGLI"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST NAME"
                android:id="@+id/textview_lastname_detail"
                android:layout_alignParentStart="true"
                android:textColor="#398bff"
                android:layout_below="@+id/textview_firstname"/>

            <TextView
                android:id="@+id/textview_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_lastname_detail"
                android:text="ZHOU"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textview_lastname"
                android:text="UC SAN DIEGO SELECTED"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEISEL"
                android:id="@+id/textview_extra"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textview_company"/>

            <TextView
                android:id="@+id/textview_dayofweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_extra"
                android:text="THURSDAY"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_dayofweek"
                android:text="MAY 19 3 - 5 PM"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Right Side -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAKE"
                android:id="@+id/textview_make_detail"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textview_details"
                android:textColor="#398bff"/>

            <TextView
                android:id="@+id/textview_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/textview_make_detail"
                android:text="BMW 428i"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLOR"
                android:id="@+id/textview_color_detail"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textview_make"
                android:textColor="#398bff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLUE"
                android:id="@+id/textview_color"
                android:layout_alignParentEnd="true"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/textview_color_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LICENSE PLATE"
                android:id="@+id/textview_license_detail"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textview_color"
                android:textColor="#398bff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7NQL961"
                android:id="@+id/textview_license"
                android:layout_alignParentEnd="true"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/textview_license_detail" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT"
            android:id="@+id/textview_payment"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativelayout_details"
            android:layout_marginTop="32dp"/>

        <!--Card Details-->
        <com.stripe.android.view.CardInputWidget
            android:layout_marginTop="8dp"
            android:layout_below="@+id/textview_payment"
            android:id="@+id/card_input_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            stripe:cardTextErrorColor="@android:color/holo_red_dark"
            stripe:cardTint="@android:color/holo_blue_light"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_pay_details"
            android:layout_below="@+id/card_input_widget"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/CountrySpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/ZipCode"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Zip Code"
                android:inputType="numberDecimal"
                android:textColorHint="@drawable/selector" />

        </LinearLayout>

        <!--Book Button-->
        <Button
            android:id="@+id/BookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearlayout_pay_details"
            android:text="PAY WITH CARD"
            android:background="@drawable/layout_rounded_corners"
            android:textColor="#ffffff"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

</ScrollView>
